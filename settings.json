{
  // File-specific formatter settings
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Editor appearance and behavior
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  "editor.cursorBlinking": "expand",
  "editor.lineNumbers": "relative",
  "editor.cursorStyle": "line-thin",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.acceptSuggestionOnEnter": "on",
  // Formatting and code actions
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "editor.suggestSelection": "recentlyUsed",
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Terminal settings
  "terminal.external.osxExec": "Alacrity.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono",
  // Workbench and UI customizations
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Omni Owl (Minimal Italics)",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,
  "workbench.editor.openPositioning": "last",
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.languageDetection": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.sideBar.location": "right",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.startupEditor": "none",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.commandPalette.experimental.suggestCommands": true,
  "editor.codeActionWidget.showHeaders": false,
  "editor.copyWithSyntaxHighlighting": false,
  // Explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "package.json, package-lock.json, tsconfig*, .prettierrc, .editorconfig, .browserslistrc, karma.conf.js"
  },
  "explorer.fileNesting.expand": false,
  "explorer.compactFolders": false,
  "explorer.sortOrderLexicographicOptions": "lower",
  // Search and security settings
  "search.exclude": {
    "**/node_modules": true
  },
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.untrustedFiles": "open",
  // Git and version control
  "git.openRepositoryInParentFolders": "never",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Custom labels for different file types
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/package*": "${filename}.${extname} - Package üì¶",
    "**/*module*": "${filename}.${extname} - Module üìö",
    "**/*model*": "${filename}.${extname} - Model üìò",
    "**/*component*": "${filename}.${extname} - Component üß©",
    "**/*service*": "${filename}.${extname} - Service üì°",
    "**/*pipe*": "${filename}.${extname} - Pipe ü™à",
    "**/*resolver*": "${filename}.${extname} - Resolver üîç",
    "**/*.scss": "${filename}.${extname} - Styles üé®",
    "**/*.json": "${filename}.${extname} - JSON üìú",
  },
  // APC settings
  "apc.font.family": "Cascadya Cove Nerd Font",
  "apc.electron": {
    "titleBarStyle": "customButtonsOnHover",
    "trafficLightPosition": {
      "x": 10,
      "y": 10
    },
    "opacity": 0.92,
    "frame": false,
  },
  "apc.statusBar": {
    "fontSize": 11,
    "position": "editor-bottom",
  },
  "apc.activityBar": {
    "position": "bottom",
    "itemMargin": 1,
    "itemSize": 30,
    "size": 25
  },
  "apc.sidebar.titlebar": {
    "fontSize": 11,
  },
  "apc.listRow": {
    "fontSize": 14,
    "height": 23,
    "lists": [
      "explorer-folders-view",
      "quick-input-list",
      "results",
      "tree"
    ]
  },
  "apc.header": {
    "fontSize": 15,
    "height": 33
  },
  "apc.imports": [
    "file://${userHome}/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js",
    "file://${userHome}/.vscode/scripts/quick-input/quick-input-blur.css",
    "file://${userHome}/.vscode/scripts/quick-input/quick-input-blur.js",
    "file://${userHome}/.vscode/scripts/quick-input/quick-input.js",
    "file://${userHome}/.vscode/scripts/base/base.css",
    "file://${userHome}/.vscode/scripts/base/checkbox.css",
    "file://${userHome}/.vscode/scripts/search/search.css",
    "file://${userHome}/.vscode/scripts/suggestions/suggestions.css",
  ],
  // VIM extension settings
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.enableNeovim": true,
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<Esc>",
        "<Esc>"
      ],
      "commands": [
        "workbench.action.files.save"
      ],
      "silent": true
    },
    {
      "before": [
        "g",
        "l"
      ],
      "commands": [
        "workbench.action.gotoLine"
      ],
      "silent": true
    },
    {
      "before": [
        "g",
        "s"
      ],
      "commands": [
        "workbench.action.gotoSymbol"
      ],
      "silent": true
    },
    {
      "before": [
        ":",
      ],
      "commands": [
        "workbench.action.showCommands"
      ],
      "silent": true
    }
  ],
  // Miscellaneous settings
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconSet": "defaultOutline",
  "errorLens.fontFamily": "CaskaydiaCove Nerd Font",
  "errorLens.messageTemplate": "[$source] $message",
  "errorLens.fontWeight": "bold",
  "errorLens.fontStyleItalic": true,
  "errorLens.scrollbarHackEnabled": true,
  "errorLens.statusBarMessageEnabled": true,
  "window.dialogStyle": "custom",
  "window.customTitleBarVisibility": "never",
  "window.titleBarStyle": "native",
  "material-icon-theme.hidesExplorerArrows": true,
  "extensions.ignoreRecommendations": true,
  "animations.Enabled": true,
  "animations.Smooth-Mode": true,
  "animations.Install-Method": "Apc Customize UI++",
  "animations.Command-Palette": "None",
  "animations.Scrolling": "Slide",
  "animations.Tabs": "Flip",
  "update.mode": "manual",
}